<mvc:View displayBlock="true" xmlns:mvc="sap.ui.core.mvc" xmlns:core="sap.ui.core" xmlns="sap.m"
	controllerName="brait_app.controller.VPInvoices">
	<List 
	    id="invoiceList"
    	class="sapUiResponsiveMargin"
    	width="auto"
		headerText="{i18n>productListTitle}" 
		items="{prueba>/Invoices}">
		<headerToolbar>
        	<Toolbar>
            	<Title text="{i18n>invoiceListTitle}"/>
            	<ToolbarSpacer/>
            	<SearchField width="50%" search="onFilterInvoices"/>
        	</Toolbar>
    	</headerToolbar>
		<items>
			<ObjectListItem 
				title="{prueba>Quantity} x {prueba>ProductName}"
				number="{ parts: [{path: 'prueba>ExtendedPrice'}, {path: 'view>/currency'}], 
					type: 'sap.ui.model.type.Currency', 
					formatOptions: { showMeasure: false } }"
				numberUnit="{view>/currency}"
				numberState="{= ${prueba>ExtendedPrice} > 10 ? 'Success' : 'Error' }">
				<firstStatus>
					<ObjectStatus text="{ path: 'prueba>Status', formatter: '.formatter.statusText' }"/>
				</firstStatus>
			</ObjectListItem>
		</items>
	</List>
</mvc:View>