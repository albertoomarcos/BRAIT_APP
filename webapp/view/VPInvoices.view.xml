<mvc:View displayBlock="true" xmlns:mvc="sap.ui.core.mvc" xmlns:core="sap.ui.core" xmlns="sap.m"
	controllerName="brait_app.controller.VPInvoices">
	<List headerText="{i18n>productListTitle}" items="{prueba>/Invoices}">
		<items>
			<ObjectListItem title="{prueba>ProductName}"
				number="{ 
					parts: [{path: 'prueba>ExtendedPrice'}, {path: 'view>/currency'}], 
					type: 'sap.ui.model.type.Currency', 
					formatOptions: { showMeasure: false } }"
				numberUnit="{view>/currency}"
				numberState="{= ${prueba>ExtendedPrice} > 10 ? 'Success' : 'Error' }">
			</ObjectListItem>
		</items>
	</List>
</mvc:View>