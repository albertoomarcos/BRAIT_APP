<mvc:View
	controllerName="sap.suite.ui.commons.demokit.tutorial.icecream.01.controller.Startpage"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns="sap.m"
	xmlns:layout="sap.ui.layout">
	<Page title="{i18n>title}">
		<layout:VerticalLayout class="sapUiResponsiveMargin">
			<Title
				titleStyle="H2"
				text="{i18n>startpageTilesGroupTitle}"
				class="sapUiTinyMarginBegin"/>
			<layout:HorizontalLayout allowWrapping="true">
				<GenericTile
                    class="sapUiTinyMarginBegin sapUiTinyMarginTop"
                    header="{i18n>startpagePFTileTitle}"
                    subheader="{i18n>startpagePFTileSubTitle}">
                    <tileContent>
                        <TileContent>
                            <content>
                                <NumericContent
                                    scale="%"
                                    value="{
                                        path: 'process>/Nodes',
                                        formatter: '.getProgress'
                                    }"
                                    icon="sap-icon://factory" />
                            </content>
                        </TileContent>
                    </tileContent>
                </GenericTile>
			</layout:HorizontalLayout>
		</layout:VerticalLayout>
	</Page>
</mvc:View>
